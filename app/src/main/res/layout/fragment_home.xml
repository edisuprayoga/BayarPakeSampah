<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/batik11"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_bg" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/saldo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_bg" />

                <TextView
                    android:id="@+id/saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/text1"
                    android:padding="8dp"
                    android:text="@string/point"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_bg"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/grey"
                    android:contentDescription="@string/info_produk"
                    android:src="@drawable/fig1" />
            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingEnd="@dimen/margin"
                android:paddingStart="@dimen/margin"
                android:stretchColumns="*">

                <TableRow
                    android:gravity="center"
                    android:paddingTop="@dimen/margin">

                    <Button
                        android:id="@+id/point"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round1"
                        android:drawableStart="@drawable/ic_dompet"
                        android:padding="@dimen/margin_sm"
                        android:scaleType="fitCenter"
                        android:text="@string/point_saya"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/isipoint"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="@dimen/margin"
                        android:background="@drawable/round1"
                        android:drawableStart="@drawable/ic_nabung"
                        android:padding="@dimen/margin_sm"
                        android:scaleType="fitCenter"
                        android:text="@string/isi_point"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="@dimen/margin"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin"
                    android:paddingTop="@dimen/margin">

                    <Button
                        android:id="@+id/tukarpoint"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round1"
                        android:drawableStart="@drawable/ic_belanja"
                        android:padding="@dimen/margin_sm"
                        android:scaleType="fitCenter"
                        android:text="@string/tukar_point"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />


                    <Button
                        android:id="@+id/produk"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="@dimen/margin"
                        android:background="@drawable/round1"
                        android:drawableStart="@drawable/ic_info"
                        android:padding="@dimen/margin_sm"
                        android:scaleType="fitCenter"
                        android:text="@string/info_produk"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />

                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/margin_sm"
            android:text="@string/abadan"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </RelativeLayout>
</LinearLayout>
